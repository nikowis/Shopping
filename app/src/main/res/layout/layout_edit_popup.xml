<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="250dp"
    android:layout_height="wrap_content">


    <TextView
        android:text="@string/popup_title_label"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/popup_text_title"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0.02" />

    <TextView
        android:text="@string/popup_description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/popup_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/popup_image_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_image_spinner"
        android:spinnerMode="dialog" />

    <Button
        android:text="@string/popup_button_add"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:id="@+id/popup_button_action" />

    <Button
        android:id="@+id/popup_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popup_button_delete"
        android:background="@color/colorPrimary"/>

</LinearLayout>